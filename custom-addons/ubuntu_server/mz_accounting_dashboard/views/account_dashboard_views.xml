<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_account_dashboard" model="ir.actions.act_window">
        <field name="name">Accounting Dashboard</field>
        <field name="res_model">account.journal</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="account_journal_dashboard_kanban_view"/>
        <field name="domain">[('show_on_dashboard', '=', True)]</field>
        <field name="context">{'dashboard_view': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No accounting journals configured yet!
            </p>
        </field>
    </record>
</odoo>
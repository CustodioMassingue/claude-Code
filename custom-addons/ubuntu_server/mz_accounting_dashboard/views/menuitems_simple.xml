<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===================================================== -->
    <!-- MAIN MZ ACCOUNTING DASHBOARD ROOT MENU              -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_accounting_root"
              name="MZ Accounting"
              sequence="30"
              web_icon="mz_accounting_dashboard,static/description/icon.png"
              groups="base.group_user"/>
    
    <!-- Dashboard Menu Item -->
    <menuitem id="menu_mz_dashboard_main"
              name="Dashboard"
              parent="menu_mz_accounting_root"
              action="action_mz_dashboard_professional"
              sequence="10"
              groups="base.group_user"/>
    
    <!-- ===================================================== -->
    <!-- CUSTOMERS SECTION                                    -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_customers"
              name="Customers"
              parent="menu_mz_accounting_root"
              sequence="20"
              groups="base.group_user"/>
    
    <!-- Customer Invoices Action -->
    <record id="action_mz_customer_invoices" model="ir.actions.act_window">
        <field name="name">Customer Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer invoice
            </p>
        </field>
    </record>
    
    <menuitem id="menu_mz_customer_invoices"
              name="Invoices"
              parent="menu_mz_customers"
              action="action_mz_customer_invoices"
              sequence="10"
              groups="base.group_user"/>
    
    <!-- Customer Credit Notes Action -->
    <record id="action_mz_customer_credit_notes" model="ir.actions.act_window">
        <field name="name">Credit Notes</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'out_refund')]</field>
        <field name="context">{'default_move_type': 'out_refund'}</field>
    </record>
    
    <menuitem id="menu_mz_customer_credit_notes"
              name="Credit Notes"
              parent="menu_mz_customers"
              action="action_mz_customer_credit_notes"
              sequence="20"
              groups="base.group_user"/>
    
    <!-- Customer Payments Action -->
    <record id="action_mz_customer_payments" model="ir.actions.act_window">
        <field name="name">Customer Payments</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('payment_type', '=', 'inbound'), ('partner_type', '=', 'customer')]</field>
        <field name="context">{'default_payment_type': 'inbound', 'default_partner_type': 'customer'}</field>
    </record>
    
    <menuitem id="menu_mz_customer_payments"
              name="Payments"
              parent="menu_mz_customers"
              action="action_mz_customer_payments"
              sequence="30"
              groups="base.group_user"/>
    
    <!-- ===================================================== -->
    <!-- VENDORS SECTION                                      -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_vendors"
              name="Vendors"
              parent="menu_mz_accounting_root"
              sequence="30"
              groups="base.group_user"/>
    
    <!-- Vendor Bills Action -->
    <record id="action_mz_vendor_bills" model="ir.actions.act_window">
        <field name="name">Vendor Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record your first vendor bill
            </p>
        </field>
    </record>
    
    <menuitem id="menu_mz_vendor_bills"
              name="Bills"
              parent="menu_mz_vendors"
              action="action_mz_vendor_bills"
              sequence="10"
              groups="base.group_user"/>
    
    <!-- Vendor Refunds Action -->
    <record id="action_mz_vendor_refunds" model="ir.actions.act_window">
        <field name="name">Vendor Refunds</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'in_refund')]</field>
        <field name="context">{'default_move_type': 'in_refund'}</field>
    </record>
    
    <menuitem id="menu_mz_vendor_refunds"
              name="Refunds"
              parent="menu_mz_vendors"
              action="action_mz_vendor_refunds"
              sequence="20"
              groups="base.group_user"/>
    
    <!-- Vendor Payments Action -->
    <record id="action_mz_vendor_payments" model="ir.actions.act_window">
        <field name="name">Vendor Payments</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('payment_type', '=', 'outbound'), ('partner_type', '=', 'supplier')]</field>
        <field name="context">{'default_payment_type': 'outbound', 'default_partner_type': 'supplier'}</field>
    </record>
    
    <menuitem id="menu_mz_vendor_payments"
              name="Payments"
              parent="menu_mz_vendors"
              action="action_mz_vendor_payments"
              sequence="30"
              groups="base.group_user"/>
    
    <!-- ===================================================== -->
    <!-- ACCOUNTING SECTION                                   -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_accounting"
              name="Accounting"
              parent="menu_mz_accounting_root"
              sequence="40"
              groups="base.group_user"/>
    
    <!-- Journal Entries Action -->
    <record id="action_mz_journal_entries" model="ir.actions.act_window">
        <field name="name">Journal Entries</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'entry')]</field>
        <field name="context">{'default_move_type': 'entry'}</field>
    </record>
    
    <menuitem id="menu_mz_journal_entries"
              name="Journal Entries"
              parent="menu_mz_accounting"
              action="action_mz_journal_entries"
              sequence="10"
              groups="base.group_user"/>
    
    <!-- Journal Items Action -->
    <record id="action_mz_journal_items" model="ir.actions.act_window">
        <field name="name">Journal Items</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot,graph,form</field>
        <field name="context">{'search_default_posted': 1}</field>
    </record>
    
    <menuitem id="menu_mz_journal_items"
              name="Journal Items"
              parent="menu_mz_accounting"
              action="action_mz_journal_items"
              sequence="20"
              groups="base.group_user"/>
    
    <!-- Chart of Accounts Action -->
    <record id="action_mz_chart_of_accounts" model="ir.actions.act_window">
        <field name="name">Chart of Accounts</field>
        <field name="res_model">account.account</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_mz_chart_of_accounts"
              name="Chart of Accounts"
              parent="menu_mz_accounting"
              action="action_mz_chart_of_accounts"
              sequence="30"
              groups="base.group_user"/>
    
    <!-- ===================================================== -->
    <!-- BANKS AND CASH SECTION                              -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_banks_cash"
              name="Banks and Cash"
              parent="menu_mz_accounting_root"
              sequence="50"
              groups="base.group_user"/>
    
    <!-- Bank Statements Action -->
    <record id="action_mz_bank_statements" model="ir.actions.act_window">
        <field name="name">Bank Statements</field>
        <field name="res_model">account.bank.statement.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('journal_id.type', '=', 'bank')]</field>
        <field name="context">{'journal_type': 'bank'}</field>
    </record>
    
    <menuitem id="menu_mz_bank_statements"
              name="Bank Statements"
              parent="menu_mz_banks_cash"
              action="action_mz_bank_statements"
              sequence="10"
              groups="base.group_user"/>
    
    <!-- Cash Registers Action -->
    <record id="action_mz_cash_registers" model="ir.actions.act_window">
        <field name="name">Cash Registers</field>
        <field name="res_model">account.bank.statement.line</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('journal_id.type', '=', 'cash')]</field>
        <field name="context">{'journal_type': 'cash'}</field>
    </record>
    
    <menuitem id="menu_mz_cash_registers"
              name="Cash Registers"
              parent="menu_mz_banks_cash"
              action="action_mz_cash_registers"
              sequence="20"
              groups="base.group_user"/>
    
    <!-- ===================================================== -->
    <!-- REPORTING SECTION                                    -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_reporting"
              name="Reporting"
              parent="menu_mz_accounting_root"
              sequence="60"
              groups="base.group_user"/>
    
    <!-- Partner Ledger Action -->
    <record id="action_mz_partner_ledger" model="ir.actions.act_window">
        <field name="name">Partner Ledger</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="domain">[('partner_id', '!=', False)]</field>
        <field name="context">{'search_default_posted': 1, 'search_default_groupby_partner': 1}</field>
    </record>
    
    <menuitem id="menu_mz_partner_ledger"
              name="Partner Ledger"
              parent="menu_mz_reporting"
              action="action_mz_partner_ledger"
              sequence="10"
              groups="base.group_user"/>
    
    <!-- General Ledger Action -->
    <record id="action_mz_general_ledger" model="ir.actions.act_window">
        <field name="name">General Ledger</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="context">{'search_default_posted': 1, 'search_default_groupby_account': 1}</field>
    </record>
    
    <menuitem id="menu_mz_general_ledger"
              name="General Ledger"
              parent="menu_mz_reporting"
              action="action_mz_general_ledger"
              sequence="20"
              groups="base.group_user"/>
    
    <!-- Aged Receivable Action -->
    <record id="action_mz_aged_receivable" model="ir.actions.act_window">
        <field name="name">Aged Receivable</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="domain">[('account_id.account_type', '=', 'asset_receivable'), ('reconciled', '=', False)]</field>
        <field name="context">{'search_default_groupby_partner': 1}</field>
    </record>
    
    <menuitem id="menu_mz_aged_receivable"
              name="Aged Receivable"
              parent="menu_mz_reporting"
              action="action_mz_aged_receivable"
              sequence="30"
              groups="base.group_user"/>
    
    <!-- Aged Payable Action -->
    <record id="action_mz_aged_payable" model="ir.actions.act_window">
        <field name="name">Aged Payable</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="domain">[('account_id.account_type', '=', 'liability_payable'), ('reconciled', '=', False)]</field>
        <field name="context">{'search_default_groupby_partner': 1}</field>
    </record>
    
    <menuitem id="menu_mz_aged_payable"
              name="Aged Payable"
              parent="menu_mz_reporting"
              action="action_mz_aged_payable"
              sequence="40"
              groups="base.group_user"/>
    
    <!-- ===================================================== -->
    <!-- CONFIGURATION SECTION                                -->
    <!-- ===================================================== -->
    <menuitem id="menu_mz_configuration"
              name="Configuration"
              parent="menu_mz_accounting_root"
              sequence="100"
              groups="base.group_system"/>
    
    <!-- Journals Configuration Action -->
    <record id="action_mz_journals_config" model="ir.actions.act_window">
        <field name="name">Journals</field>
        <field name="res_model">account.journal</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    
    <menuitem id="menu_mz_journals_config"
              name="Journals"
              parent="menu_mz_configuration"
              action="action_mz_journals_config"
              sequence="10"
              groups="base.group_system"/>
    
    <!-- Taxes Configuration Action -->
    <record id="action_mz_taxes_config" model="ir.actions.act_window">
        <field name="name">Taxes</field>
        <field name="res_model">account.tax</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    
    <menuitem id="menu_mz_taxes_config"
              name="Taxes"
              parent="menu_mz_configuration"
              action="action_mz_taxes_config"
              sequence="20"
              groups="base.group_system"/>
    
    <!-- Fiscal Positions Action -->
    <record id="action_mz_fiscal_positions" model="ir.actions.act_window">
        <field name="name">Fiscal Positions</field>
        <field name="res_model">account.fiscal.position</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_mz_fiscal_positions"
              name="Fiscal Positions"
              parent="menu_mz_configuration"
              action="action_mz_fiscal_positions"
              sequence="30"
              groups="base.group_system"/>
    
    <!-- Payment Terms Action -->
    <record id="action_mz_payment_terms" model="ir.actions.act_window">
        <field name="name">Payment Terms</field>
        <field name="res_model">account.payment.term</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_mz_payment_terms"
              name="Payment Terms"
              parent="menu_mz_configuration"
              action="action_mz_payment_terms"
              sequence="40"
              groups="base.group_system"/>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <!-- MZ Dashboard Graph Template -->
    <t t-name="mz_accounting_dashboard.MZDashboardGraph">
        <div class="o_mz_dashboard_graph">
            <canvas t-ref="canvas" width="280" height="100"/>
        </div>
    </t>
    
    <!-- Kanban Buttons Template -->
    <t t-name="mz_accounting_dashboard.KanbanButtons">
        <div class="o_kanban_buttons">
            <button type="button" 
                    class="btn btn-primary" 
                    t-on-click="() => this.onRefreshDashboard()">
                <i class="fa fa-refresh"/> Refresh
            </button>
        </div>
    </t>
    
    <!-- Enhanced Card Actions -->
    <t t-name="mz_accounting_dashboard.CardActions">
        <div class="o_dashboard_card_actions">
            <div class="btn-group btn-group-sm" role="group">
                <button type="button" 
                        class="btn btn-outline-primary" 
                        t-att-data-journal-id="record.id"
                        t-att-data-journal-type="record.type"
                        t-on-click="(ev) => this.onCreateNew(ev.target.dataset.journalId, ev.target.dataset.journalType)">
                    <i class="fa fa-plus"/> New
                </button>
                <button type="button" 
                        class="btn btn-outline-secondary"
                        t-att-data-journal-id="record.id"
                        t-on-click="(ev) => this.onUploadDocument(ev.target.dataset.journalId)"
                        t-if="record.type === 'purchase'">
                    <i class="fa fa-upload"/> Upload
                </button>
                <button type="button" 
                        class="btn btn-outline-info"
                        t-att-data-journal-id="record.id"
                        t-on-click="(ev) => this.onReconcile(ev.target.dataset.journalId)"
                        t-if="record.type === 'bank' or record.type === 'cash'">
                    <i class="fa fa-balance-scale"/> Reconcile
                </button>
            </div>
        </div>
    </t>
    
    <!-- Loading Spinner -->
    <t t-name="mz_accounting_dashboard.LoadingSpinner">
        <div class="o_dashboard_loading text-center p-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <div class="mt-2">Loading dashboard data...</div>
        </div>
    </t>
    
</templates>
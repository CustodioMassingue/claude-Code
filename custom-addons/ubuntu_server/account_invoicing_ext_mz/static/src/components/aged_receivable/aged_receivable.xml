<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_invoicing_ext_mz.AgedReceivableReport" owl="1">
        <div class="o_aged_receivable_report">
            <div class="o_control_panel">
                <div class="o_control_panel_main">
                    <div class="o_control_panel_actions">
                        <!-- Export buttons -->
                        <button class="btn btn-primary" t-on-click="() => this.exportToPDF()">
                            <i class="fa fa-file-pdf-o"/> PDF
                        </button>
                        <button class="btn btn-primary ms-1" t-on-click="() => this.exportToXLSX()">
                            <i class="fa fa-file-excel-o"/> XLSX
                        </button>
                        
                        <span class="text-muted mx-3">Aged Receivable</span>
                        
                        <!-- As of Date -->
                        <div class="btn-group">
                            <i class="fa fa-calendar me-2"/>
                            <span class="me-2">As of</span>
                            <input type="date" 
                                   class="form-control form-control-sm"
                                   style="width: 150px;"
                                   t-att-value="state.filters.as_of_date"
                                   t-on-change="(ev) => this.onAsOfDateChange(ev)"/>
                        </div>
                        
                        <!-- Account Type -->
                        <div class="btn-group ms-2">
                            <button class="btn btn-outline-secondary dropdown-toggle" 
                                    data-bs-toggle="dropdown">
                                <i class="fa fa-user"/>
                                <t t-if="state.filters.account_type === 'receivable'">Account: Receivable</t>
                                <t t-elif="state.filters.account_type === 'payable'">Account: Payable</t>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onAccountTypeChange('receivable')">
                                    Receivable
                                </a></li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onAccountTypeChange('payable')">
                                    Payable
                                </a></li>
                            </ul>
                        </div>
                        
                        <!-- Partners filter -->
                        <button class="btn btn-outline-secondary ms-1"
                                t-on-click="() => this.onPartnerFilterClick()">
                            <i class="fa fa-users"/>
                            Partners
                        </button>
                        
                        <!-- Based on -->
                        <div class="btn-group ms-1">
                            <button class="btn btn-outline-secondary dropdown-toggle" 
                                    data-bs-toggle="dropdown">
                                <i class="fa fa-calendar-check-o"/>
                                <t t-if="state.filters.based_on === 'due_date'">Based on Due Date</t>
                                <t t-else="">Based on Invoice Date</t>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onBasedOnChange('due_date')">
                                    Due Date
                                </a></li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onBasedOnChange('invoice_date')">
                                    Invoice Date
                                </a></li>
                            </ul>
                        </div>
                        
                        <!-- Period Length -->
                        <div class="btn-group ms-1">
                            <button class="btn btn-outline-secondary dropdown-toggle" 
                                    data-bs-toggle="dropdown">
                                <i class="fa fa-clock-o"/>
                                <t t-esc="state.filters.period_length"/> Days
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onPeriodLengthChange(30)">
                                    30 Days
                                </a></li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onPeriodLengthChange(60)">
                                    60 Days
                                </a></li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onPeriodLengthChange(90)">
                                    90 Days
                                </a></li>
                            </ul>
                        </div>
                        
                        <!-- Options dropdown -->
                        <div class="btn-group ms-1">
                            <button class="btn btn-outline-secondary dropdown-toggle" 
                                    data-bs-toggle="dropdown">
                                Options
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" t-on-click.prevent="() => this.showSettings()">
                                    <i class="fa fa-cog me-2"/> Settings
                                </a></li>
                            </ul>
                        </div>
                        
                        <!-- Options icon -->
                        <div class="btn-group ms-1">
                            <button class="btn btn-outline-secondary">
                                In...
                                <i class="fa fa-sort-amount-desc ms-1"/>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="o_content">
                <!-- Unposted warning -->
                <div t-if="state.unpostedWarning" class="alert alert-info mb-3">
                    <strong>There are unposted Journal Entries</strong> prior or included in this period.
                </div>
                
                <!-- Loading state -->
                <div t-if="state.isLoading" class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-3x mb-3"/>
                    <p>Loading Aged Receivable...</p>
                </div>
                
                <!-- Error state -->
                <div t-elif="state.error" class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle"/> <t t-esc="state.error"/>
                </div>
                
                <!-- Aged Receivable table -->
                <div t-else="">
                    <div class="o_aged_receivable_table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2" style="background-color: #ffffff;"></th>
                                    <th colspan="7" class="text-center" style="background-color: #f8f9fa;">
                                        As of <t t-esc="this.formatDate(state.filters.as_of_date)"/>
                                    </th>
                                    <th style="width: 40px; background-color: #ffffff; text-align: center;">
                                        <i class="fa fa-cog" style="color: #6a737d; cursor: pointer;" t-on-click="() => this.showSettings()"/>
                                    </th>
                                </tr>
                                <tr style="background-color: #e9ecef;">
                                    <th style="width: 30%;"></th>
                                    <th style="width: 10%;">Invoice Date</th>
                                    <th style="width: 10%;">At Date</th>
                                    <th class="text-center">1-30</th>
                                    <th class="text-center">31-60</th>
                                    <th class="text-center">61-90</th>
                                    <th class="text-center">91-120</th>
                                    <th class="text-center">Older</th>
                                    <th class="text-center">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Total row at top -->
                                <tr class="total-line">
                                    <td><strong>Aged Receivable</strong></td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.invoice_date)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.at_date)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.period_1)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.period_2)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.period_3)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.period_4)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.older)"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>MT <t t-esc="this.formatCurrency(state.totals.total)"/></strong>
                                    </td>
                                    <td></td>
                                </tr>
                                
                                <!-- Partner rows -->
                                <t t-foreach="state.partners" t-as="partner" t-key="partner.id">
                                    <tr class="partner-row">
                                        <td>
                                            <button class="btn btn-link p-0 me-2" 
                                                    t-on-click="() => this.togglePartner(partner.id)">
                                                <i t-att-class="this.isExpanded(partner.id) ? 'fa fa-caret-down' : 'fa fa-caret-right'"/>
                                            </button>
                                            <t t-esc="partner.name"/>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.invoice_date !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.invoice_date)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.at_date !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.at_date)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.period_1 !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.period_1)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.period_2 !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.period_2)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.period_3 !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.period_3)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.period_4 !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.period_4)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.older !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.older)"/>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="partner.total !== 0">
                                                MT <t t-esc="this.formatCurrency(partner.total)"/>
                                            </t>
                                        </td>
                                        <td></td>
                                    </tr>
                                    
                                    <!-- Partner detail rows (expandable) -->
                                    <t t-if="this.isExpanded(partner.id)">
                                        <t t-foreach="partner.lines" t-as="line" t-key="line.id">
                                            <tr class="partner-detail">
                                                <td class="ps-5 text-muted" colspan="2">
                                                    <small>
                                                        <t t-esc="line.date"/> - <t t-esc="line.move_name"/>
                                                        <t t-if="line.ref"> - <t t-esc="line.ref"/></t>
                                                    </small>
                                                </td>
                                                <td colspan="6"></td>
                                                <td class="text-end text-muted">
                                                    <small>MT <t t-esc="this.formatCurrency(line.amount)"/></small>
                                                </td>
                                                <td></td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
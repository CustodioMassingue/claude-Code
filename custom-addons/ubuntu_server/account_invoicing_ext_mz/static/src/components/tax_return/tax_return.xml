<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_invoicing_ext_mz.TaxReturnReport" owl="1">
        <div class="o_tax_return_report">
            <div class="o_control_panel">
                <div class="o_control_panel_main">
                    <div class="o_control_panel_actions">
                        <!-- Export buttons -->
                        <button class="btn btn-primary" t-on-click="() => this.exportToPDF()">
                            <i class="fa fa-file-pdf-o"/> PDF
                        </button>
                        <button class="btn btn-primary ms-1" t-on-click="() => this.exportToXLSX()">
                            <i class="fa fa-file-excel-o"/> XLSX
                        </button>
                        
                        <!-- Closing Entry toggle -->
                        <button class="btn btn-outline-secondary ms-2"
                                t-att-class="{ 'active': state.showClosingEntry }"
                                t-on-click="() => this.onClosingEntryToggle()">
                            Closing Entry
                        </button>
                        
                        <span class="text-muted mx-3">Tax Return</span>
                        
                        <!-- Date filter -->
                        <div class="btn-group">
                            <button class="btn btn-outline-secondary">
                                <i class="fa fa-calendar"/>
                                <t t-if="state.filters.date_to">
                                    <t t-esc="formatDate(state.filters.date_to + '-01')"/>
                                </t>
                                <t t-else="">Jul 2025</t>
                            </button>
                            <input type="month" 
                                   class="d-none" 
                                   t-att-value="state.filters.date_to"
                                   t-on-change="(ev) => this.onDateChange(ev)"/>
                        </div>
                        
                        <!-- Comparison -->
                        <button class="btn btn-outline-secondary ms-1"
                                t-on-click="() => this.onComparisonClick()">
                            <i class="fa fa-percent"/>
                            Comparison
                        </button>
                        
                        <!-- Posted Entries -->
                        <button class="btn btn-outline-secondary ms-1"
                                t-att-class="{ 'active': state.filters.posted_entries }"
                                t-on-click="() => this.onPostedEntriesToggle()">
                            <i class="fa fa-check-square" t-if="state.filters.posted_entries"/>
                            <i class="fa fa-square-o" t-else=""/>
                            Posted Entries
                        </button>
                        
                        <!-- Report Type dropdown -->
                        <div class="btn-group ms-1">
                            <button class="btn btn-outline-secondary dropdown-toggle" 
                                    data-bs-toggle="dropdown">
                                <i class="fa fa-file-text-o"/>
                                <t t-esc="getReportTypeLabel()"/>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onReportTypeChange('tcs')">
                                    Report: TCS Report (IN)
                                </a></li>
                                <li><hr class="dropdown-divider"/></li>
                                <li class="dropdown-header">Relatórios Moçambicanos</li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onReportTypeChange('vat')">
                                    Relatório: IVA (MZ)
                                </a></li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onReportTypeChange('irps')">
                                    Relatório: IRPS (MZ)
                                </a></li>
                                <li><a class="dropdown-item" href="#" 
                                       t-on-click.prevent="() => this.onReportTypeChange('all')">
                                    Relatório: Todos os Impostos
                                </a></li>
                            </ul>
                        </div>
                        
                        <!-- Options dropdown -->
                        <div class="btn-group ms-1">
                            <button class="btn btn-outline-secondary" t-on-click="() => this.showSettings()">
                                <i class="fa fa-cog"/>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="o_content">
                <!-- Loading state -->
                <div t-if="state.isLoading" class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-3x mb-3"/>
                    <p>Loading Tax Return...</p>
                </div>
                
                <!-- Error state -->
                <div t-elif="state.error" class="alert alert-danger">
                    <i class="fa fa-exclamation-triangle"/> <t t-esc="state.error"/>
                </div>
                
                <!-- Tax Return table -->
                <div t-else="" class="o_tax_return_table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 70%;"></th>
                                <th class="text-end">
                                    <t t-if="state.filters.date_to">
                                        <t t-esc="formatDate(state.filters.date_to + '-01')"/>
                                    </t>
                                    <t t-else="">Jul 2025</t>
                                </th>
                                <th style="width: 60px;"></th>
                            </tr>
                            <tr>
                                <th></th>
                                <th class="text-end">Balance</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.lines" t-as="line" t-key="line.id">
                                <tr>
                                    <td>
                                        <span class="tax-line-name">
                                            <t t-esc="line.name"/>
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <t t-esc="formatCurrency(line.amount)"/>
                                    </td>
                                    <td class="text-center">
                                        <t t-if="line.has_info">
                                            <i class="fa fa-info-circle text-muted" 
                                               style="cursor: pointer;"
                                               t-on-click="() => this.showTaxDetails(line)"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                            
                            <!-- Total row -->
                            <t t-if="state.lines.length > 0">
                                <tr class="total-line">
                                    <td class="fw-bold">
                                        Total de Impostos
                                    </td>
                                    <td class="text-end fw-bold">
                                        <t t-esc="state.currencySymbol"/> <t t-esc="formatCurrency(state.totalTaxes)"/>
                                    </td>
                                    <td></td>
                                </tr>
                            </t>
                            
                            <!-- Empty state -->
                            <t t-if="state.lines.length === 0">
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-4">
                                        Nenhum dado de impostos encontrado para o período selecionado
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</templates>
<odoo>
  <record id="view_asset_simple_tree" model="ir.ui.view">
    <field name="name">account.asset.simple.tree</field>
    <field name="model">account.asset.simple</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="acquisition_date"/>
        <field name="original_value"/>
        <field name="accumulated_depr"/>
        <field name="value_net"/>
        <field name="state"/>
      </tree>
    </field>
  </record>
 
  <record id="view_asset_simple_form" model="ir.ui.view">
    <field name="name">account.asset.simple.form</field>
    <field name="model">account.asset.simple</field>
    <field name="arch" type="xml">
      <form string="Asset">
        <header>
          <button name="action_post_month" type="object" string="Post Month" class="btn-primary" invisible="state != 'open'"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="acquisition_date"/>
            <field name="original_value"/>
            <field name="depreciation_months"/>
            <field name="accumulated_depr" readonly="1"/>
            <field name="value_net" readonly="1"/>
          </group>
          <group>
            <field name="asset_account_id"/>
            <field name="expense_account_id"/>
            <field name="journal_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>

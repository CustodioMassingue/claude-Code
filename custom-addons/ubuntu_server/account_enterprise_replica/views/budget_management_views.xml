<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Budget Management Form View -->
    <record id="view_budget_management_form" model="ir.ui.view">
        <field name="name">account.budget.management.form</field>
        <field name="model">account.budget.management</field>
        <field name="arch" type="xml">
            <form string="Budget">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                            class="oe_highlight" states="draft"/>
                    <button name="action_approve" type="object" string="Approve" 
                            class="oe_highlight" states="confirmed"
                            groups="account.group_account_manager"/>
                    <button name="action_reset_to_draft" type="object" 
                            string="Reset to Draft" states="confirmed,approved"/>
                    <button name="action_generate_report" type="object" 
                            string="Generate Report" states="approved"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" position="inside">
                        <button name="action_view_actual_entries" type="object" 
                                class="oe_stat_button" icon="fa-bars">
                            <field name="actual_entry_count" widget="statinfo" string="Entries"/>
                        </button>
                        <button name="action_view_variance_analysis" type="object" 
                                class="oe_stat_button" icon="fa-line-chart">
                            <field name="variance_percentage" widget="statinfo" string="% Variance"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Budget Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="currency_id"/>
                            <field name="budget_type"/>
                            <field name="period_type"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="responsible_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Budget Lines">
                            <field name="budget_line_ids">
                                <tree editable="bottom" 
                                      decoration-success="utilization_percentage &lt; 90"
                                      decoration-warning="utilization_percentage &gt;= 90 and utilization_percentage &lt; 100"
                                      decoration-danger="utilization_percentage &gt;= 100">
                                    <field name="account_id"/>
                                    <field name="analytic_account_id" optional="show"/>
                                    <field name="cost_center_id" optional="show"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="planned_amount" sum="Total Planned"/>
                                    <field name="actual_amount" sum="Total Actual" readonly="1"/>
                                    <field name="committed_amount" sum="Total Committed" readonly="1"/>
                                    <field name="available_amount" sum="Total Available" readonly="1"/>
                                    <field name="variance_amount" sum="Total Variance" readonly="1"/>
                                    <field name="utilization_percentage" widget="percentage" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Summary">
                            <group>
                                <group string="Budget Totals">
                                    <field name="total_planned_amount"/>
                                    <field name="total_actual_amount"/>
                                    <field name="total_committed_amount"/>
                                    <field name="total_available_amount"/>
                                </group>
                                <group string="Performance">
                                    <field name="total_variance_amount"/>
                                    <field name="variance_percentage" widget="percentage"/>
                                    <field name="overall_utilization" widget="percentage"/>
                                    <field name="forecast_year_end"/>
                                </group>
                            </group>
                            
                            <separator string="Budget vs Actual Chart"/>
                            <field name="budget_chart_data" widget="chart" nolabel="1"/>
                        </page>
                        
                        <page string="Versions">
                            <field name="version_ids">
                                <tree>
                                    <field name="version_number"/>
                                    <field name="name"/>
                                    <field name="created_date"/>
                                    <field name="created_by"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Alerts">
                            <group>
                                <group string="Alert Configuration">
                                    <field name="enable_alerts"/>
                                    <field name="alert_threshold" 
                                           attrs="{'invisible': [('enable_alerts', '=', False)]}"/>
                                    <field name="alert_recipients" widget="many2many_tags"
                                           attrs="{'invisible': [('enable_alerts', '=', False)]}"/>
                                </group>
                            </group>
                            <field name="alert_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="alert_type"/>
                                    <field name="message"/>
                                    <field name="is_resolved"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Notes">
                            <field name="notes" placeholder="Add any notes or comments here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Budget Management Tree View -->
    <record id="view_budget_management_tree" model="ir.ui.view">
        <field name="name">account.budget.management.tree</field>
        <field name="model">account.budget.management</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" 
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'approved'">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="budget_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="total_planned_amount"/>
                <field name="total_actual_amount"/>
                <field name="variance_percentage" widget="percentage"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Budget Management Kanban View -->
    <record id="view_budget_management_kanban" model="ir.ui.view">
        <field name="name">account.budget.management.kanban</field>
        <field name="model">account.budget.management</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="budget_type"/>
                <field name="total_planned_amount"/>
                <field name="total_actual_amount"/>
                <field name="variance_percentage"/>
                <field name="overall_utilization"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="budget_type"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Planned</span>
                                        <h4><field name="total_planned_amount" widget="monetary"/></h4>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Actual</span>
                                        <h4><field name="total_actual_amount" widget="monetary"/></h4>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <div class="col-12">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" 
                                                 t-att-style="'width: ' + record.overall_utilization.raw_value + '%'"
                                                 t-att-class="record.overall_utilization.raw_value > 100 ? 'bg-danger' : (record.overall_utilization.raw_value > 80 ? 'bg-warning' : 'bg-success')">
                                                <field name="overall_utilization"/>%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt8">
                                    <field name="state" widget="label_selection"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Budget Management Search View -->
    <record id="view_budget_management_search" model="ir.ui.view">
        <field name="name">account.budget.management.search</field>
        <field name="model">account.budget.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="responsible_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                <separator/>
                <filter name="my_budgets" string="My Budgets" 
                        domain="[('responsible_id', '=', uid)]"/>
                <filter name="over_budget" string="Over Budget" 
                        domain="[('variance_percentage', '&lt;', 0)]"/>
                <filter name="current_period" string="Current Period" 
                        domain="[('date_from', '&lt;=', context_today()), ('date_to', '&gt;=', context_today())]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_type" string="Type" context="{'group_by': 'budget_type'}"/>
                    <filter name="group_by_responsible" string="Responsible" context="{'group_by': 'responsible_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_by_company" string="Company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Budget Management Action -->
    <record id="action_budget_management" model="ir.actions.act_window">
        <field name="name">Budget Management</field>
        <field name="res_model">account.budget.management</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_budget_management_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first budget
            </p>
            <p>
                Define budgets to control spending and track performance against planned amounts.
                Monitor utilization and receive alerts when thresholds are exceeded.
            </p>
        </field>
    </record>
    
    <!-- Budget Line Action -->
    <record id="action_budget_line" model="ir.actions.act_window">
        <field name="name">Budget Lines</field>
        <field name="res_model">account.budget.line</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
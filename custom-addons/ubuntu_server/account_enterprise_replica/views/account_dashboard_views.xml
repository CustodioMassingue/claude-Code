<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Main Dashboard View -->
    <record id="view_account_enterprise_dashboard_form" model="ir.ui.view">
        <field name="name">account.enterprise.dashboard.form</field>
        <field name="model">account.enterprise.dashboard</field>
        <field name="arch" type="xml">
            <form string="Accounting Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <!-- Control Panel -->
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="period_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="dashboard_type"/>
                            <field name="currency_id"/>
                            <button name="action_refresh_dashboard" type="object" 
                                    string="Refresh" class="oe_highlight"/>
                            <button name="export_to_excel" type="object" 
                                    string="Export Excel" class="oe_link"/>
                            <button name="export_to_pdf" type="object" 
                                    string="Export PDF" class="oe_link"/>
                        </group>
                    </group>
                    
                    <!-- KPI Cards -->
                    <div class="row mt16">
                        <div class="col-lg-3 col-md-6">
                            <div class="kpi-card bg-primary">
                                <div class="kpi-header">
                                    <i class="fa fa-line-chart"/>
                                    <span>Total Revenue</span>
                                </div>
                                <div class="kpi-value">
                                    <field name="kpi_total_revenue" widget="monetary"/>
                                </div>
                                <div class="kpi-footer">
                                    <field name="kpi_revenue_growth" widget="percentage"/> vs last period
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6">
                            <div class="kpi-card bg-success">
                                <div class="kpi-header">
                                    <i class="fa fa-money"/>
                                    <span>Net Profit</span>
                                </div>
                                <div class="kpi-value">
                                    <field name="kpi_net_profit" widget="monetary"/>
                                </div>
                                <div class="kpi-footer">
                                    <field name="kpi_net_margin" widget="percentage"/> margin
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6">
                            <div class="kpi-card bg-info">
                                <div class="kpi-header">
                                    <i class="fa fa-bank"/>
                                    <span>Cash Position</span>
                                </div>
                                <div class="kpi-value">
                                    <field name="kpi_cash_position" widget="monetary"/>
                                </div>
                                <div class="kpi-footer">
                                    <field name="kpi_operating_cash_flow" widget="monetary"/> operating CF
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-md-6">
                            <div class="kpi-card bg-warning">
                                <div class="kpi-header">
                                    <i class="fa fa-users"/>
                                    <span>Receivables</span>
                                </div>
                                <div class="kpi-value">
                                    <field name="kpi_accounts_receivable" widget="monetary"/>
                                </div>
                                <div class="kpi-footer">
                                    <field name="kpi_dso"/> days outstanding
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Charts Section -->
                    <notebook>
                        <page string="Financial Overview">
                            <group>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="Revenue Trend"
                                                type="line"
                                                stacked="false">
                                            <field name="chart_revenue_trend" invisible="1"/>
                                        </widget>
                                    </div>
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="Expense Breakdown"
                                                type="pie">
                                            <field name="chart_expense_breakdown" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-lg-12">
                                        <widget name="web_dashboard_graph" 
                                                title="Cash Flow Analysis"
                                                type="waterfall">
                                            <field name="chart_cash_flow" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                            </group>
                        </page>
                        
                        <page string="Profitability Analysis">
                            <group>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="P&amp;L Comparison"
                                                type="bar"
                                                stacked="false">
                                            <field name="chart_pnl_comparison" invisible="1"/>
                                        </widget>
                                    </div>
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="Margin Analysis"
                                                type="line">
                                            <field name="chart_margin_analysis" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                            </group>
                        </page>
                        
                        <page string="Balance Sheet">
                            <group>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <widget name="web_dashboard_graph" 
                                                title="Balance Sheet Structure"
                                                type="bar"
                                                stacked="true">
                                            <field name="chart_balance_sheet" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="Liquidity Ratios"
                                                type="radar">
                                            <field name="chart_liquidity_ratios" invisible="1"/>
                                        </widget>
                                    </div>
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="Financial Ratios"
                                                type="radar">
                                            <field name="chart_financial_ratios" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                            </group>
                        </page>
                        
                        <page string="Receivables &amp; Payables">
                            <group>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="AR Aging Analysis"
                                                type="bar">
                                            <field name="chart_ar_aging" invisible="1"/>
                                        </widget>
                                    </div>
                                    <div class="col-lg-6">
                                        <widget name="web_dashboard_graph" 
                                                title="AP Aging Analysis"
                                                type="bar">
                                            <field name="chart_ap_aging" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-lg-12">
                                        <group string="Top Customers by Outstanding">
                                            <field name="top_customers" nolabel="1">
                                                <tree>
                                                    <field name="partner_id"/>
                                                    <field name="outstanding_amount" widget="monetary"/>
                                                    <field name="overdue_amount" widget="monetary"/>
                                                    <field name="average_days_overdue"/>
                                                </tree>
                                            </field>
                                        </group>
                                    </div>
                                </div>
                            </group>
                        </page>
                        
                        <page string="Budget Analysis">
                            <group>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <widget name="web_dashboard_graph" 
                                                title="Budget vs Actual"
                                                type="bar"
                                                mode="group">
                                            <field name="chart_budget_vs_actual" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                            </group>
                        </page>
                        
                        <page string="Forecast">
                            <group>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <widget name="web_dashboard_graph" 
                                                title="Cash Flow Forecast (30 days)"
                                                type="line">
                                            <field name="chart_cash_forecast" invisible="1"/>
                                        </widget>
                                    </div>
                                </div>
                            </group>
                        </page>
                    </notebook>
                    
                    <!-- Additional Info -->
                    <group string="Dashboard Information" groups="base.group_no_one">
                        <group>
                            <field name="last_refresh"/>
                            <field name="cache_duration"/>
                            <field name="auto_refresh"/>
                        </group>
                        <group>
                            <field name="performance_load_time"/>
                            <field name="performance_total_loads"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dashboard Tree View -->
    <record id="view_account_enterprise_dashboard_tree" model="ir.ui.view">
        <field name="name">account.enterprise.dashboard.tree</field>
        <field name="model">account.enterprise.dashboard</field>
        <field name="arch" type="xml">
            <tree string="Dashboards">
                <field name="name"/>
                <field name="dashboard_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="last_refresh"/>
                <field name="user_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    
    <!-- Dashboard Kanban View -->
    <record id="view_account_enterprise_dashboard_kanban" model="ir.ui.view">
        <field name="name">account.enterprise.dashboard.kanban</field>
        <field name="model">account.enterprise.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="dashboard_type"/>
                <field name="kpi_total_revenue"/>
                <field name="kpi_net_profit"/>
                <field name="kpi_cash_position"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="dashboard_type"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Revenue</span>
                                        <h4><field name="kpi_total_revenue" widget="monetary"/></h4>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Profit</span>
                                        <h4><field name="kpi_net_profit" widget="monetary"/></h4>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <div class="col-12">
                                        <span class="text-muted">Cash</span>
                                        <h4><field name="kpi_cash_position" widget="monetary"/></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Dashboard Action -->
    <record id="action_account_enterprise_dashboard" model="ir.actions.act_window">
        <field name="name">Accounting Dashboard</field>
        <field name="res_model">account.enterprise.dashboard</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_dashboard_type': 'executive'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dashboard
            </p>
            <p>
                Get real-time insights into your financial performance with advanced KPIs,
                charts, and analytics. Track revenue, expenses, cash flow, and more.
            </p>
        </field>
    </record>
    
    <!-- Menu Items -->
    <menuitem id="menu_account_enterprise_dashboard"
              name="Dashboard"
              parent="account.menu_finance"
              action="action_account_enterprise_dashboard"
              sequence="1"/>
    
    <menuitem id="menu_account_executive_dashboard"
              name="Executive Dashboard"
              parent="menu_account_enterprise_dashboard"
              action="action_account_enterprise_dashboard"
              sequence="1"/>
    
    <menuitem id="menu_account_cfo_dashboard"
              name="CFO Dashboard"
              parent="menu_account_enterprise_dashboard"
              action="action_account_enterprise_dashboard"
              sequence="2"
              context="{'default_dashboard_type': 'cfo'}"/>
    
    <menuitem id="menu_account_operational_dashboard"
              name="Operational Dashboard"
              parent="menu_account_enterprise_dashboard"
              action="action_account_enterprise_dashboard"
              sequence="3"
              context="{'default_dashboard_type': 'operational'}"/>
    </data>
</odoo>
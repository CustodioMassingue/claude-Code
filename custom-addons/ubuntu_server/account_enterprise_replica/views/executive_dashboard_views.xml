<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Executive Dashboard View -->
    <record id="view_executive_dashboard_form" model="ir.ui.view">
        <field name="name">executive.dashboard.form</field>
        <field name="model">account.executive.dashboard</field>
        <field name="arch" type="xml">
            <form string="Executive Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Executive Dashboard</h1>
                    </div>
                    <group>
                        <group string="Financial Overview">
                            <field name="total_revenue" widget="monetary"/>
                            <field name="total_expenses" widget="monetary"/>
                            <field name="net_profit" widget="monetary"/>
                            <field name="profit_margin" widget="percentage"/>
                            <field name="ebitda" widget="monetary"/>
                            <field name="ebitda_margin" widget="percentage"/>
                        </group>
                        <group string="Cash Position">
                            <field name="cash_balance" widget="monetary"/>
                            <field name="accounts_receivable" widget="monetary"/>
                            <field name="accounts_payable" widget="monetary"/>
                            <field name="working_capital" widget="monetary"/>
                            <field name="quick_ratio"/>
                            <field name="current_ratio"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Revenue Analysis">
                            <field name="revenue_by_segment" widget="graph" 
                                   options="{'graph_type': 'pie'}"/>
                            <field name="revenue_trend" widget="graph" 
                                   options="{'graph_type': 'line'}"/>
                        </page>
                        <page string="Expense Analysis">
                            <field name="expense_by_category" widget="graph" 
                                   options="{'graph_type': 'bar'}"/>
                            <field name="cost_center_analysis" widget="pivot"/>
                        </page>
                        <page string="Key Metrics">
                            <group>
                                <group>
                                    <field name="roe" string="ROE"/>
                                    <field name="roa" string="ROA"/>
                                    <field name="roce" string="ROCE"/>
                                    <field name="debt_to_equity"/>
                                </group>
                                <group>
                                    <field name="inventory_turnover"/>
                                    <field name="receivables_turnover"/>
                                    <field name="payables_turnover"/>
                                    <field name="cash_conversion_cycle"/>
                                </group>
                            </group>
                        </page>
                        <page string="Forecast">
                            <field name="cash_flow_forecast" widget="graph" 
                                   options="{'graph_type': 'area'}"/>
                            <field name="revenue_forecast" widget="graph" 
                                   options="{'graph_type': 'line'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CFO Dashboard View -->
    <record id="view_cfo_dashboard_form" model="ir.ui.view">
        <field name="name">cfo.dashboard.form</field>
        <field name="model">account.cfo.dashboard</field>
        <field name="arch" type="xml">
            <form string="CFO Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>CFO Dashboard</h1>
                    </div>
                    <group>
                        <group string="Financial Performance">
                            <field name="ytd_revenue" widget="monetary"/>
                            <field name="ytd_expenses" widget="monetary"/>
                            <field name="ytd_net_income" widget="monetary"/>
                            <field name="budget_variance" widget="monetary"/>
                            <field name="forecast_accuracy" widget="percentage"/>
                        </group>
                        <group string="Treasury Management">
                            <field name="total_cash" widget="monetary"/>
                            <field name="credit_lines_available" widget="monetary"/>
                            <field name="debt_service_coverage"/>
                            <field name="interest_coverage_ratio"/>
                            <field name="days_cash_on_hand"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Balance Sheet Summary">
                            <group col="4">
                                <field name="total_assets" widget="monetary"/>
                                <field name="total_liabilities" widget="monetary"/>
                                <field name="total_equity" widget="monetary"/>
                                <field name="net_working_capital" widget="monetary"/>
                            </group>
                            <field name="balance_sheet_items" widget="pivot"/>
                        </page>
                        <page string="P&amp;L Analysis">
                            <field name="pnl_comparison" widget="graph" 
                                   options="{'graph_type': 'bar'}"/>
                            <field name="gross_margin_trend" widget="graph" 
                                   options="{'graph_type': 'line'}"/>
                        </page>
                        <page string="Cash Flow Management">
                            <field name="cash_flow_statement" widget="pivot"/>
                            <field name="cash_burn_rate" widget="graph" 
                                   options="{'graph_type': 'line'}"/>
                        </page>
                        <page string="Risk Metrics">
                            <group>
                                <group>
                                    <field name="fx_exposure" widget="monetary"/>
                                    <field name="credit_risk_score"/>
                                    <field name="liquidity_risk_score"/>
                                    <field name="operational_risk_score"/>
                                </group>
                                <group>
                                    <field name="var_95" widget="monetary" string="VaR (95%)"/>
                                    <field name="stress_test_result"/>
                                    <field name="covenant_compliance"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Operational Dashboard View -->
    <record id="view_operational_dashboard_form" model="ir.ui.view">
        <field name="name">operational.dashboard.form</field>
        <field name="model">account.operational.dashboard</field>
        <field name="arch" type="xml">
            <form string="Operational Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Operational Dashboard</h1>
                    </div>
                    <group>
                        <group string="Transaction Metrics">
                            <field name="transactions_today"/>
                            <field name="transactions_mtd"/>
                            <field name="average_transaction_value" widget="monetary"/>
                            <field name="pending_approvals"/>
                        </group>
                        <group string="Process Efficiency">
                            <field name="reconciliation_rate" widget="percentage"/>
                            <field name="auto_posting_rate" widget="percentage"/>
                            <field name="average_processing_time"/>
                            <field name="error_rate" widget="percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Daily Operations">
                            <field name="daily_transactions" widget="graph" 
                                   options="{'graph_type': 'bar'}"/>
                            <field name="pending_tasks" widget="kanban"/>
                        </page>
                        <page string="Reconciliation Status">
                            <field name="bank_reconciliation_status" widget="pivot"/>
                            <field name="unreconciled_items"/>
                        </page>
                        <page string="Workflow Status">
                            <field name="approval_queue"/>
                            <field name="workflow_bottlenecks" widget="graph"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KPI Dashboard View -->
    <record id="view_kpi_dashboard_form" model="ir.ui.view">
        <field name="name">kpi.dashboard.form</field>
        <field name="model">account.kpi.dashboard</field>
        <field name="arch" type="xml">
            <form string="KPI Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Key Performance Indicators</h1>
                    </div>
                    <notebook>
                        <page string="Financial KPIs">
                            <group col="4">
                                <field name="revenue_growth" widget="percentage"/>
                                <field name="gross_profit_margin" widget="percentage"/>
                                <field name="operating_margin" widget="percentage"/>
                                <field name="net_profit_margin" widget="percentage"/>
                                <field name="return_on_assets" widget="percentage"/>
                                <field name="return_on_equity" widget="percentage"/>
                                <field name="debt_ratio" widget="percentage"/>
                                <field name="interest_coverage"/>
                            </group>
                        </page>
                        <page string="Liquidity KPIs">
                            <group col="4">
                                <field name="current_ratio"/>
                                <field name="quick_ratio"/>
                                <field name="cash_ratio"/>
                                <field name="operating_cash_flow_ratio"/>
                                <field name="days_sales_outstanding"/>
                                <field name="days_payable_outstanding"/>
                                <field name="days_inventory_outstanding"/>
                                <field name="cash_conversion_cycle"/>
                            </group>
                        </page>
                        <page string="Efficiency KPIs">
                            <group col="4">
                                <field name="asset_turnover"/>
                                <field name="inventory_turnover"/>
                                <field name="receivables_turnover"/>
                                <field name="payables_turnover"/>
                                <field name="working_capital_turnover"/>
                                <field name="fixed_asset_turnover"/>
                            </group>
                        </page>
                        <page string="Trend Analysis">
                            <field name="kpi_trends" widget="graph" 
                                   options="{'graph_type': 'line'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cash Management Dashboard -->
    <record id="view_cash_management_dashboard_form" model="ir.ui.view">
        <field name="name">cash.management.dashboard.form</field>
        <field name="model">account.cash.management.dashboard</field>
        <field name="arch" type="xml">
            <form string="Cash Management Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Cash Management</h1>
                    </div>
                    <group>
                        <group string="Cash Position">
                            <field name="total_cash_balance" widget="monetary"/>
                            <field name="operating_cash" widget="monetary"/>
                            <field name="restricted_cash" widget="monetary"/>
                            <field name="available_cash" widget="monetary"/>
                        </group>
                        <group string="Cash Flow">
                            <field name="daily_cash_flow" widget="monetary"/>
                            <field name="weekly_cash_flow" widget="monetary"/>
                            <field name="monthly_cash_flow" widget="monetary"/>
                            <field name="cash_burn_rate" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Bank Accounts">
                            <field name="bank_account_balances"/>
                        </page>
                        <page string="Cash Forecast">
                            <field name="cash_forecast_chart" widget="graph" 
                                   options="{'graph_type': 'area'}"/>
                        </page>
                        <page string="Cash Requirements">
                            <field name="upcoming_payments" widget="monetary"/>
                            <field name="expected_receipts" widget="monetary"/>
                            <field name="net_cash_requirement" widget="monetary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Revenue Analysis Dashboard -->
    <record id="view_revenue_analysis_dashboard_form" model="ir.ui.view">
        <field name="name">revenue.analysis.dashboard.form</field>
        <field name="model">account.revenue.analysis.dashboard</field>
        <field name="arch" type="xml">
            <form string="Revenue Analysis Dashboard" create="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <h1>Revenue Analysis</h1>
                    </div>
                    <group>
                        <group string="Revenue Overview">
                            <field name="total_revenue" widget="monetary"/>
                            <field name="recurring_revenue" widget="monetary"/>
                            <field name="non_recurring_revenue" widget="monetary"/>
                            <field name="mrr" widget="monetary" string="MRR"/>
                            <field name="arr" widget="monetary" string="ARR"/>
                        </group>
                        <group string="Growth Metrics">
                            <field name="revenue_growth_rate" widget="percentage"/>
                            <field name="cagr" widget="percentage" string="CAGR"/>
                            <field name="customer_acquisition_cost" widget="monetary"/>
                            <field name="customer_lifetime_value" widget="monetary"/>
                            <field name="ltv_cac_ratio"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Revenue by Segment">
                            <field name="revenue_by_segment" widget="graph" 
                                   options="{'graph_type': 'pie'}"/>
                        </page>
                        <page string="Revenue by Product">
                            <field name="revenue_by_product" widget="pivot"/>
                        </page>
                        <page string="Revenue by Geography">
                            <field name="revenue_by_geography" widget="graph" 
                                   options="{'graph_type': 'bar'}"/>
                        </page>
                        <page string="Revenue Trends">
                            <field name="revenue_trend" widget="graph" 
                                   options="{'graph_type': 'line'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions for Dashboards -->
    <record id="action_account_enterprise_dashboard" model="ir.actions.act_window">
        <field name="name">Executive Dashboard</field>
        <field name="res_model">account.executive.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_executive_dashboard_form"/>
        <field name="target">main</field>
    </record>

    <record id="action_account_cfo_dashboard" model="ir.actions.act_window">
        <field name="name">CFO Dashboard</field>
        <field name="res_model">account.cfo.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cfo_dashboard_form"/>
        <field name="target">main</field>
    </record>

    <record id="action_account_operational_dashboard" model="ir.actions.act_window">
        <field name="name">Operational Dashboard</field>
        <field name="res_model">account.operational.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_operational_dashboard_form"/>
        <field name="target">main</field>
    </record>

    <record id="action_account_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">KPI Dashboard</field>
        <field name="res_model">account.kpi.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_kpi_dashboard_form"/>
        <field name="target">main</field>
    </record>

    <record id="action_cash_management_dashboard" model="ir.actions.act_window">
        <field name="name">Cash Management Dashboard</field>
        <field name="res_model">account.cash.management.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cash_management_dashboard_form"/>
        <field name="target">main</field>
    </record>

    <record id="action_revenue_analysis_dashboard" model="ir.actions.act_window">
        <field name="name">Revenue Analysis Dashboard</field>
        <field name="res_model">account.revenue.analysis.dashboard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_revenue_analysis_dashboard_form"/>
        <field name="target">main</field>
    </record>
</odoo>
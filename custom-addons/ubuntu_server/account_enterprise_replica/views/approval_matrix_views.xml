<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Matrix Form View -->
    <record id="view_approval_matrix_form" model="ir.ui.view">
        <field name="name">account.approval.matrix.form</field>
        <field name="model">account.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Approval Matrix">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Approval Rule Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="move_type"/>
                            <field name="approval_level"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="min_amount"/>
                            <field name="max_amount"/>
                            <field name="currency_id"/>
                            <field name="require_sequential"/>
                        </group>
                    </group>
                    
                    <separator string="Approvers"/>
                    <field name="approver_ids">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="user_id"/>
                            <field name="role"/>
                            <field name="is_required"/>
                            <field name="can_approve"/>
                            <field name="can_reject"/>
                        </tree>
                    </field>
                    
                    <separator string="Conditions"/>
                    <group>
                        <field name="condition_ids">
                            <tree editable="bottom">
                                <field name="field_name"/>
                                <field name="operator"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Approval Matrix Tree View -->
    <record id="view_approval_matrix_tree" model="ir.ui.view">
        <field name="name">account.approval.matrix.tree</field>
        <field name="model">account.approval.matrix</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="move_type"/>
                <field name="min_amount"/>
                <field name="max_amount"/>
                <field name="approval_level"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <!-- Approval Matrix Action -->
    <record id="action_approval_matrix" model="ir.actions.act_window">
        <field name="name">Approval Matrix</field>
        <field name="res_model">account.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure approval rules
            </p>
            <p>
                Set up approval workflows based on document type, amount, and other conditions.
            </p>
        </field>
    </record>
    
    <!-- Approval History Views -->
    <record id="view_approval_history_tree" model="ir.ui.view">
        <field name="name">account.approval.history.tree</field>
        <field name="model">account.approval.history</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="date"/>
                <field name="move_id"/>
                <field name="user_id"/>
                <field name="status"/>
                <field name="comments"/>
            </tree>
        </field>
    </record>
    
    <record id="action_approval_history" model="ir.actions.act_window">
        <field name="name">Approval History</field>
        <field name="res_model">account.approval.history</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
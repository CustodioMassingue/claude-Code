<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Consolidation Chart Form View -->
    <record id="view_consolidation_chart_form" model="ir.ui.view">
        <field name="name">account.consolidation.chart.form</field>
        <field name="model">account.consolidation.chart</field>
        <field name="arch" type="xml">
            <form string="Consolidation Chart">
                <header>
                    <button name="action_validate" type="object" string="Validate" 
                            class="oe_highlight" states="draft"/>
                    <button name="action_consolidate" type="object" string="Consolidate" 
                            class="oe_highlight" states="ready"
                            confirm="This will run the consolidation process. Continue?"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            states="ready,done"/>
                    <button name="action_view_consolidated_balance_sheet" type="object" 
                            string="Balance Sheet" states="done"/>
                    <button name="action_view_consolidated_pnl" type="object" 
                            string="P&amp;L Statement" states="done"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,ready,consolidating,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Consolidation Chart Name"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Chart Code"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="currency_id"/>
                            <field name="consolidation_method"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="current_period_id" domain="[('chart_id', '=', id)]"/>
                            <field name="period_type"/>
                            <field name="auto_create_periods"/>
                            <field name="last_consolidation_date" readonly="1"/>
                            <field name="next_consolidation_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Companies">
                            <field name="company_ids">
                                <tree editable="bottom">
                                    <field name="subsidiary_id"/>
                                    <field name="consolidation_method"/>
                                    <field name="ownership_percentage"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Accounts">
                            <field name="account_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="account_type"/>
                                    <field name="currency_mode"/>
                                    <field name="balance" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Journals">
                            <group>
                                <field name="elimination_journal_id" 
                                       domain="[('chart_id', '=', id)]"/>
                                <field name="conversion_journal_id" 
                                       domain="[('chart_id', '=', id)]"/>
                            </group>
                            <field name="journal_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Mappings">
                            <field name="account_mapping_ids">
                                <tree editable="bottom">
                                    <field name="company_id"/>
                                    <field name="subsidiary_account_id"/>
                                    <field name="consolidation_account_id" 
                                           domain="[('chart_id', '=', parent.id)]"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Eliminations">
                            <field name="elimination_rule_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="rule_type"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Currency Rates">
                            <field name="conversion_rate_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="currency_from_id"/>
                                    <field name="currency_to_id"/>
                                    <field name="rate"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Periods">
                            <field name="period_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Summary">
                            <group>
                                <group string="Balance Sheet Summary">
                                    <field name="total_assets"/>
                                    <field name="total_liabilities"/>
                                    <field name="total_equity"/>
                                </group>
                                <group string="Special Accounts">
                                    <field name="minority_interest_account_id" 
                                           domain="[('chart_id', '=', id)]"/>
                                    <field name="goodwill_account_id" 
                                           domain="[('chart_id', '=', id)]"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Consolidation Chart Tree View -->
    <record id="view_consolidation_chart_tree" model="ir.ui.view">
        <field name="name">account.consolidation.chart.tree</field>
        <field name="model">account.consolidation.chart</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="consolidation_method"/>
                <field name="state"/>
                <field name="last_consolidation_date"/>
            </tree>
        </field>
    </record>
    
    <!-- Consolidation Chart Search View -->
    <record id="view_consolidation_chart_search" model="ir.ui.view">
        <field name="name">account.consolidation.chart.search</field>
        <field name="model">account.consolidation.chart</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="ready" string="Ready" domain="[('state', '=', 'ready')]"/>
                <filter name="done" string="Consolidated" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="my_charts" string="My Charts" 
                        domain="[('company_id', 'in', [company_id])]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_company" string="Company" 
                            context="{'group_by': 'company_id'}"/>
                    <filter name="group_by_state" string="State" 
                            context="{'group_by': 'state'}"/>
                    <filter name="group_by_method" string="Method" 
                            context="{'group_by': 'consolidation_method'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Consolidation Chart Action -->
    <record id="action_consolidation_chart" model="ir.actions.act_window">
        <field name="name">Consolidation Charts</field>
        <field name="res_model">account.consolidation.chart</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_consolidation_chart_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first consolidation chart
            </p>
            <p>
                Set up consolidation charts to combine financial data from multiple companies.
                Define account mappings, elimination rules, and consolidation methods.
            </p>
        </field>
    </record>
</odoo>
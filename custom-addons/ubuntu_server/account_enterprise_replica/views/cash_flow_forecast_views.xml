<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cash Flow Forecast Form View -->
    <record id="view_cash_flow_forecast_form" model="ir.ui.view">
        <field name="name">account.cash.flow.forecast.form</field>
        <field name="model">account.cash.flow.forecast</field>
        <field name="arch" type="xml">
            <form string="Cash Flow Forecast">
                <header>
                    <button name="action_generate_forecast" type="object" 
                            string="Generate Forecast" class="oe_highlight" 
                            states="draft"/>
                    <button name="action_refresh_forecast" type="object" 
                            string="Refresh" states="done"/>
                    <button name="action_export_excel" type="object" 
                            string="Export to Excel" states="done"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,processing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Forecast Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="currency_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="forecast_type"/>
                        </group>
                        <group>
                            <field name="include_draft_invoices"/>
                            <field name="include_sales_orders"/>
                            <field name="include_purchase_orders"/>
                            <field name="use_ai_prediction"/>
                            <field name="confidence_level" 
                                   attrs="{'invisible': [('use_ai_prediction', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Forecast Lines">
                            <field name="forecast_line_ids">
                                <tree editable="bottom" decoration-success="amount > 0" 
                                      decoration-danger="amount &lt; 0">
                                    <field name="date"/>
                                    <field name="category_id"/>
                                    <field name="source_document"/>
                                    <field name="partner_id"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="probability"/>
                                    <field name="weighted_amount" sum="Weighted Total"/>
                                    <field name="is_actual"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Summary">
                            <group>
                                <group string="Cash Inflows">
                                    <field name="total_inflow_actual"/>
                                    <field name="total_inflow_forecast"/>
                                    <field name="total_inflow"/>
                                </group>
                                <group string="Cash Outflows">
                                    <field name="total_outflow_actual"/>
                                    <field name="total_outflow_forecast"/>
                                    <field name="total_outflow"/>
                                </group>
                            </group>
                            <group>
                                <group string="Cash Position">
                                    <field name="opening_balance"/>
                                    <field name="net_cash_flow"/>
                                    <field name="closing_balance"/>
                                </group>
                                <group string="Key Metrics">
                                    <field name="minimum_balance"/>
                                    <field name="minimum_balance_date"/>
                                    <field name="days_of_cash"/>
                                    <field name="forecast_accuracy" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Analysis">
                            <group string="Variance Analysis">
                                <field name="variance_analysis" widget="html" nolabel="1"/>
                            </group>
                        </page>
                        
                        <page string="Settings">
                            <group>
                                <group string="Categories">
                                    <field name="category_ids" widget="many2many_tags"/>
                                </group>
                                <group string="Scenarios">
                                    <field name="scenario_type"/>
                                    <field name="adjustment_percentage" 
                                           attrs="{'invisible': [('scenario_type', '=', 'normal')]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Cash Flow Forecast Tree View -->
    <record id="view_cash_flow_forecast_tree" model="ir.ui.view">
        <field name="name">account.cash.flow.forecast.tree</field>
        <field name="model">account.cash.flow.forecast</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="forecast_type"/>
                <field name="net_cash_flow"/>
                <field name="closing_balance"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Cash Flow Forecast Kanban View -->
    <record id="view_cash_flow_forecast_kanban" model="ir.ui.view">
        <field name="name">account.cash.flow.forecast.kanban</field>
        <field name="model">account.cash.flow.forecast</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="opening_balance"/>
                <field name="closing_balance"/>
                <field name="net_cash_flow"/>
                <field name="minimum_balance"/>
                <field name="currency_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="date_from"/> - <field name="date_to"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Opening</span>
                                        <h4><field name="opening_balance" widget="monetary"/></h4>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Closing</span>
                                        <h4><field name="closing_balance" widget="monetary"/></h4>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    <div class="col-6">
                                        <span class="text-muted">Net Flow</span>
                                        <h4 t-att-class="record.net_cash_flow.raw_value > 0 ? 'text-success' : 'text-danger'">
                                            <field name="net_cash_flow" widget="monetary"/>
                                        </h4>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Min Balance</span>
                                        <h4 t-att-class="record.minimum_balance.raw_value > 0 ? 'text-success' : 'text-danger'">
                                            <field name="minimum_balance" widget="monetary"/>
                                        </h4>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'default', 'done': 'success'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Cash Flow Forecast Action -->
    <record id="action_cash_flow_forecast" model="ir.actions.act_window">
        <field name="name">Cash Flow Forecast</field>
        <field name="res_model">account.cash.flow.forecast</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cash flow forecast
            </p>
            <p>
                Predict future cash positions based on invoices, orders, and historical patterns.
                Use AI-powered predictions for more accurate forecasting.
            </p>
        </field>
    </record>
    
    <!-- Cash Flow Category Views -->
    <record id="view_cash_flow_category_tree" model="ir.ui.view">
        <field name="name">account.cash.flow.category.tree</field>
        <field name="model">account.cash.flow.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="type"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>
    
    <record id="view_cash_flow_category_form" model="ir.ui.view">
        <field name="name">account.cash.flow.category.form</field>
        <field name="model">account.cash.flow.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_cash_flow_category" model="ir.actions.act_window">
        <field name="name">Cash Flow Categories</field>
        <field name="res_model">account.cash.flow.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
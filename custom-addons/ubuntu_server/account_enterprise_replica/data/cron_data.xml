<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cash Flow Forecast Cron -->
        <record id="cron_cash_flow_forecast" model="ir.cron">
            <field name="name">Generate Cash Flow Forecast</field>
            <field name="model_id" ref="model_account_cash_flow_forecast"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_forecast()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
        <!-- Dashboard Refresh Cron -->
        <record id="cron_dashboard_refresh" model="ir.cron">
            <field name="name">Refresh Dashboard Cache</field>
            <field name="model_id" ref="model_account_enterprise_dashboard"/>
            <field name="state">code</field>
            <field name="code">model.cron_refresh_all_dashboards()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
        <!-- Currency Revaluation Cron -->
        <record id="cron_fx_revaluation" model="ir.cron">
            <field name="name">FX Revaluation</field>
            <field name="model_id" ref="model_account_fx_revaluation"/>
            <field name="state">code</field>
            <field name="code">model.cron_revalue_currencies()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
        </record>
        
        <!-- Auto Post Entries Cron -->
        <record id="cron_auto_post" model="ir.cron">
            <field name="name">Auto-Post Journal Entries</field>
            <field name="model_id" ref="model_account_auto_post"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_post_entries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
        <!-- Anomaly Detection Cron -->
        <record id="cron_anomaly_detection" model="ir.cron">
            <field name="name">Detect Accounting Anomalies</field>
            <field name="model_id" ref="model_account_anomaly_detection"/>
            <field name="state">code</field>
            <field name="code">model.cron_detect_anomalies()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
        <!-- Performance Optimization Cron -->
        <record id="cron_performance_optimize" model="ir.cron">
            <field name="name">Optimize Accounting Performance</field>
            <field name="model_id" ref="model_account_performance_optimizer"/>
            <field name="state">code</field>
            <field name="code">model.cron_optimize_performance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
        <!-- Cache Cleanup Cron -->
        <record id="cron_cache_cleanup" model="ir.cron">
            <field name="name">Clean Enterprise Cache</field>
            <field name="model_id" ref="model_account_enterprise_cache"/>
            <field name="state">code</field>
            <field name="code">model.cron_cleanup_cache()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
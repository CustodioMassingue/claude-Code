<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Cash Flow Categories -->
        <record id="cash_flow_category_operating" model="account.cash.flow.category">
            <field name="name">Operating Activities</field>
            <field name="code">OPER</field>
            <field name="category_type">operating</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="cash_flow_category_investing" model="account.cash.flow.category">
            <field name="name">Investing Activities</field>
            <field name="code">INVEST</field>
            <field name="category_type">investing</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="cash_flow_category_financing" model="account.cash.flow.category">
            <field name="name">Financing Activities</field>
            <field name="code">FINANCE</field>
            <field name="category_type">financing</field>
            <field name="sequence">30</field>
        </record>
        
        <!-- Default Executive Dashboard -->
        <record id="dashboard_executive_default" model="account.enterprise.dashboard">
            <field name="name">Executive Dashboard</field>
            <field name="dashboard_type">executive</field>
            <field name="period_type">month</field>
            <field name="auto_refresh">True</field>
            <field name="refresh_interval">300</field>
        </record>
        
        <!-- Default CFO Dashboard -->
        <record id="dashboard_cfo_default" model="account.enterprise.dashboard">
            <field name="name">CFO Dashboard</field>
            <field name="dashboard_type">cfo</field>
            <field name="period_type">quarter</field>
            <field name="auto_refresh">True</field>
            <field name="refresh_interval">600</field>
        </record>
        
        <!-- Default Operational Dashboard -->
        <record id="dashboard_operational_default" model="account.enterprise.dashboard">
            <field name="name">Operational Dashboard</field>
            <field name="dashboard_type">operational</field>
            <field name="period_type">week</field>
            <field name="auto_refresh">True</field>
            <field name="refresh_interval">180</field>
        </record>
        
        <!-- Default Approval Matrix -->
        <record id="approval_matrix_invoice_small" model="account.approval.matrix">
            <field name="name">Invoice - Small Amount</field>
            <field name="move_type">in_invoice</field>
            <field name="min_amount">0</field>
            <field name="max_amount">10000</field>
            <field name="approval_level">1</field>
        </record>
        
        <record id="approval_matrix_invoice_medium" model="account.approval.matrix">
            <field name="name">Invoice - Medium Amount</field>
            <field name="move_type">in_invoice</field>
            <field name="min_amount">10000</field>
            <field name="max_amount">50000</field>
            <field name="approval_level">2</field>
        </record>
        
        <record id="approval_matrix_invoice_large" model="account.approval.matrix">
            <field name="name">Invoice - Large Amount</field>
            <field name="move_type">in_invoice</field>
            <field name="min_amount">50000</field>
            <field name="max_amount">999999999</field>
            <field name="approval_level">3</field>
        </record>
        
        <!-- Cost Centers -->
        <record id="cost_center_admin" model="account.cost.center">
            <field name="name">Administration</field>
            <field name="code">ADM</field>
        </record>
        
        <record id="cost_center_sales" model="account.cost.center">
            <field name="name">Sales</field>
            <field name="code">SALES</field>
        </record>
        
        <record id="cost_center_production" model="account.cost.center">
            <field name="name">Production</field>
            <field name="code">PROD</field>
        </record>
        
        <!-- Business Segments -->
        <record id="segment_retail" model="account.business.segment">
            <field name="name">Retail</field>
            <field name="code">RET</field>
        </record>
        
        <record id="segment_wholesale" model="account.business.segment">
            <field name="name">Wholesale</field>
            <field name="code">WHO</field>
        </record>
        
        <record id="segment_online" model="account.business.segment">
            <field name="name">Online</field>
            <field name="code">ONL</field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_account_enterprise_user" model="res.groups">
        <field name="name">Enterprise Accounting User</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
    </record>
    
    <record id="group_account_enterprise_manager" model="res.groups">
        <field name="name">Enterprise Accounting Manager</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>
    
    <record id="group_consolidation_user" model="res.groups">
        <field name="name">Consolidation User</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_account_enterprise_user'))]"/>
    </record>
    
    <record id="group_consolidation_manager" model="res.groups">
        <field name="name">Consolidation Manager</field>
        <field name="category_id" ref="base.module_category_accounting_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_consolidation_user'))]"/>
    </record>
    
    <!-- Record Rules -->
    <record id="account_enterprise_dashboard_rule_company" model="ir.rule">
        <field name="name">Dashboard: multi-company</field>
        <field name="model_id" ref="model_account_enterprise_dashboard"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="account_consolidation_chart_rule_company" model="ir.rule">
        <field name="name">Consolidation Chart: multi-company</field>
        <field name="model_id" ref="model_account_consolidation_chart"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="account_cash_flow_forecast_rule_company" model="ir.rule">
        <field name="name">Cash Flow Forecast: multi-company</field>
        <field name="model_id" ref="model_account_cash_flow_forecast"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="account_budget_management_rule_company" model="ir.rule">
        <field name="name">Budget Management: multi-company</field>
        <field name="model_id" ref="model_account_budget_management"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
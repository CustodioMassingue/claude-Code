<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sales Journal -->
    <record id="journal_sale" model="account.journal">
        <field name="name">Vendas</field>
        <field name="code">VEN</field>
        <field name="type">sale</field>
        <field name="default_account_id" ref="account_template_71"/>

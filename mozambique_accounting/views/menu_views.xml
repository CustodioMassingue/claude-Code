<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_moz_accounting_root"
        name="Mozambique Accounting"
        sequence="40"
        web_icon="mozambique_accounting,static/description/icon.png"/>

    <!-- Dashboard Menu -->
    <menuitem id="menu_moz_dashboard"
        name="Dashboard"
        parent="menu_moz_accounting_root"
        sequence="1"/>

    <!-- Invoicing Menu -->
    <menuitem id="menu_moz_invoicing"
        name="Invoicing"
        parent="menu_moz_accounting_root"
        sequence="10"/>
    
    <menuitem id="menu_moz_customer_invoices"
        name="Customer Invoices"
        parent="menu_moz_invoicing"
        action="action_moz_invoice"
        sequence="1"/>
    
    <menuitem id="menu_moz_credit_notes"
        name="Credit Notes"
        parent="menu_moz_invoicing"
        action="action_moz_invoice"
        sequence="2"
        context="{'default_invoice_type': 'NC'}"/>

    <!-- Banking Menu -->
    <menuitem id="menu_moz_banking"
        name="Banking"
        parent="menu_moz_accounting_root"
        sequence="20"/>
    
    <menuitem id="menu_moz_bank_statements"
        name="Bank Statements"
        parent="menu_moz_banking"
        action="action_moz_bank_statement"
        sequence="1"/>
    
    <menuitem id="menu_moz_bank_reconciliation"
        name="Bank Reconciliation"
        parent="menu_moz_banking"
        action="action_moz_bank_reconciliation"
        sequence="2"/>
    
    <menuitem id="menu_moz_reconcile_models"
        name="Reconciliation Models"
        parent="menu_moz_banking"
        action="action_moz_bank_reconcile_model"
        sequence="3"/>

    <!-- Assets Menu -->
    <menuitem id="menu_moz_assets"
        name="Assets"
        parent="menu_moz_accounting_root"
        sequence="30"/>
    
    <menuitem id="menu_moz_asset_list"
        name="Assets"
        parent="menu_moz_assets"
        action="action_moz_asset"
        sequence="1"/>
    
    <menuitem id="menu_moz_asset_categories"
        name="Asset Categories"
        parent="menu_moz_assets"
        action="action_moz_asset_category"
        sequence="2"/>
    
    <menuitem id="menu_moz_depreciation_lines"
        name="Depreciation Lines"
        parent="menu_moz_assets"
        action="action_moz_asset_depreciation_line"
        sequence="3"/>

    <!-- Analytics Menu -->
    <menuitem id="menu_moz_analytics"
        name="Analytics"
        parent="menu_moz_accounting_root"
        sequence="40"/>
    
    <menuitem id="menu_moz_analytic_accounts"
        name="Analytic Accounts"
        parent="menu_moz_analytics"
        action="action_moz_analytic_account"
        sequence="1"/>
    
    <menuitem id="menu_moz_analytic_lines"
        name="Analytic Lines"
        parent="menu_moz_analytics"
        action="action_moz_analytic_line"
        sequence="2"/>
    
    <menuitem id="menu_moz_cost_centers"
        name="Cost Centers"
        parent="menu_moz_analytics"
        action="action_moz_cost_center"
        sequence="3"/>
    
    <menuitem id="menu_moz_analytic_tags"
        name="Analytic Tags"
        parent="menu_moz_analytics"
        action="action_moz_analytic_tag"
        sequence="4"/>

    <!-- Reports Menu -->
    <menuitem id="menu_moz_reports"
        name="Reports"
        parent="menu_moz_accounting_root"
        sequence="50"/>
    
    <menuitem id="menu_moz_financial_reports"
        name="Financial Reports"
        parent="menu_moz_reports"
        sequence="1"/>
    
    <menuitem id="menu_moz_balance_sheet"
        name="Balance Sheet"
        parent="menu_moz_financial_reports"
        action="action_moz_balance_sheet_report"
        sequence="1"/>
    
    <menuitem id="menu_moz_profit_loss"
        name="Profit &amp; Loss"
        parent="menu_moz_financial_reports"
        action="action_moz_profit_loss_report"
        sequence="2"/>
    
    <menuitem id="menu_moz_trial_balance"
        name="Trial Balance"
        parent="menu_moz_financial_reports"
        action="action_moz_trial_balance_report"
        sequence="3"/>
    
    <menuitem id="menu_moz_fiscal_reports"
        name="Fiscal Reports"
        parent="menu_moz_reports"
        sequence="2"/>
    
    <menuitem id="menu_moz_saft_export"
        name="SAF-T Export"
        parent="menu_moz_fiscal_reports"
        action="action_moz_saft_export_wizard"
        sequence="1"/>
    
    <menuitem id="menu_moz_vat_declaration"
        name="VAT Declaration"
        parent="menu_moz_fiscal_reports"
        action="action_moz_vat_declaration_wizard"
        sequence="2"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_moz_configuration"
        name="Configuration"
        parent="menu_moz_accounting_root"
        sequence="100"
        groups="account.group_account_manager"/>
    
    <menuitem id="menu_moz_config_accounting"
        name="Accounting"
        parent="menu_moz_configuration"
        sequence="1"/>
    
    <menuitem id="menu_moz_chart_of_accounts"
        name="Chart of Accounts"
        parent="menu_moz_config_accounting"
        action="action_account_account"
        sequence="1"/>
    
    <menuitem id="menu_moz_taxes"
        name="Taxes"
        parent="menu_moz_config_accounting"
        action="action_account_tax"
        sequence="2"/>
    
    <menuitem id="menu_moz_journals"
        name="Journals"
        parent="menu_moz_config_accounting"
        action="action_account_journal"
        sequence="3"/>
    
    <menuitem id="menu_moz_fiscal_positions"
        name="Fiscal Positions"
        parent="menu_moz_config_accounting"
        action="action_account_fiscal_position"
        sequence="4"/>
    
    <menuitem id="menu_moz_payment_terms"
        name="Payment Terms"
        parent="menu_moz_config_accounting"
        action="action_account_payment_term"
        sequence="5"/>
    
    <menuitem id="menu_moz_config_settings"
        name="Settings"
        parent="menu_moz_configuration"
        action="action_moz_account_config_settings"
        sequence="99"/>

    <!-- Additional Actions -->
    <record id="action_moz_bank_statement" model="ir.actions.act_window">
        <field name="name">Bank Statements</field>
        <field name="res_model">moz.bank.statement</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_moz_bank_reconciliation" model="ir.actions.act_window">
        <field name="name">Bank Reconciliation</field>
        <field name="res_model">moz.bank.reconciliation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_moz_bank_reconcile_model" model="ir.actions.act_window">
        <field name="name">Reconciliation Models</field>
        <field name="res_model">moz.bank.reconcile.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_moz_analytic_account" model="ir.actions.act_window">
        <field name="name">Analytic Accounts</field>
        <field name="res_model">moz.analytic.account</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <record id="action_moz_analytic_line" model="ir.actions.act_window">
        <field name="name">Analytic Lines</field>
        <field name="res_model">moz.analytic.line</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <record id="action_moz_cost_center" model="ir.actions.act_window">
        <field name="name">Cost Centers</field>
        <field name="res_model">moz.cost.center</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <record id="action_moz_analytic_tag" model="ir.actions.act_window">
        <field name="name">Analytic Tags</field>
        <field name="res_model">moz.analytic.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_moz_asset_depreciation_line" model="ir.actions.act_window">
        <field name="name">Depreciation Lines</field>
        <field name="res_model">moz.asset.depreciation.line</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Asset Tree View -->
    <record id="view_moz_asset_tree" model="ir.ui.view">
        <field name="name">moz.asset.list</field>
        <field name="model">moz.asset</field>
        <field name="arch" type="xml">
            <list string="Assets" decoration-info="state=='draft'" decoration-success="state=='open'" decoration-muted="state=='close'">
                <field name="code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="acquisition_date"/>
                <field name="purchase_value" widget="monetary" sum="Total Purchase"/>
                <field name="book_value" widget="monetary" sum="Total Book Value"/>
                <field name="depreciated_value" widget="monetary" sum="Total Depreciated"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Asset Form View -->
    <record id="view_moz_asset_form" model="ir.ui.view">
        <field name="name">moz.asset.form</field>
        <field name="model">moz.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <button name="action_validate" string="Validate" type="object" class="btn-primary" states="draft"/>
                    <button name="action_set_to_close" string="Close" type="object" states="open"/>
                    <button name="action_sell" string="Sell Asset" type="object" states="open"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,close"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_depreciation_lines" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="method_number" widget="statinfo" string="Depreciation Lines"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Sold" bg_color="bg-warning" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Asset Name"/>
                        </h1>
                        <label for="code"/>
                        <h2>
                            <field name="code" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="asset_type"/>
                            <field name="acquisition_date"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="purchase_value" widget="monetary"/>
                            <field name="salvage_value" widget="monetary"/>
                            <field name="book_value" widget="monetary"/>
                            <field name="value_residual" widget="monetary"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Depreciation" name="depreciation">
                            <group>
                                <group>
                                    <field name="method"/>
                                    <field name="method_number" string="Duration"/>
                                    <field name="method_period"/>
                                    <field name="method_progress_factor" attrs="{'invisible': [('method', '!=', 'degressive')]}"/>
                                </group>
                                <group>
                                    <field name="depreciated_value" widget="monetary"/>
                                    <field name="total_depreciation" widget="monetary"/>
                                </group>
                            </group>
                            <field name="depreciation_line_ids">
                                <list decoration-info="move_posted==False">
                                    <field name="sequence"/>
                                    <field name="depreciation_date"/>
                                    <field name="depreciation_value" widget="monetary" sum="Total"/>
                                    <field name="remaining_value" widget="monetary"/>
                                    <field name="move_id"/>
                                    <field name="move_posted" invisible="1"/>
                                    <button name="create_move" string="Create Move" type="object" icon="fa-plus" attrs="{'invisible': [('move_id', '!=', False)]}"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Accounting" name="accounting">
                            <group>
                                <group>
                                    <field name="journal_id"/>
                                    <field name="account_asset_id"/>
                                    <field name="account_depreciation_id"/>
                                    <field name="account_depreciation_expense_id"/>
                                </group>
                                <group>
                                    <field name="analytic_account_id"/>
                                    <field name="analytic_tag_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        <page string="Additional Info" name="additional_info">
                            <group>
                                <group>
                                    <field name="serial_number"/>
                                    <field name="model"/>
                                    <field name="location"/>
                                </group>
                                <group>
                                    <field name="disposal_date" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                                    <field name="sale_value" widget="monetary" attrs="{'invisible': [('state', '!=', 'sold')]}"/>
                                    <field name="disposal_move_id" attrs="{'invisible': [('disposal_move_id', '=', False)]}"/>
                                </group>
                            </group>
                            <field name="note" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Asset Search View -->
    <record id="view_moz_asset_search" model="ir.ui.view">
        <field name="name">moz.asset.search</field>
        <field name="model">moz.asset</field>
        <field name="arch" type="xml">
            <search string="Search Assets">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="open" string="Running" domain="[('state','=','open')]"/>
                <filter name="close" string="Closed" domain="[('state','=','close')]"/>
                <separator/>
                <filter name="current_year" string="Current Year" domain="[('acquisition_date','&gt;=',(datetime.date.today().replace(month=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_category" string="Category" context="{'group_by':'category_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by':'state'}"/>
                    <filter name="group_by_partner" string="Vendor" context="{'group_by':'partner_id'}"/>
                    <filter name="group_by_date" string="Acquisition Date" context="{'group_by':'acquisition_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Asset Category Tree View -->
    <record id="view_moz_asset_category_tree" model="ir.ui.view">
        <field name="name">moz.asset.category.list</field>
        <field name="model">moz.asset.category</field>
        <field name="arch" type="xml">
            <list string="Asset Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="asset_type"/>
                <field name="method"/>
                <field name="method_number"/>
                <field name="asset_count"/>
            </list>
        </field>
    </record>

    <!-- Asset Category Form View -->
    <record id="view_moz_asset_category_form" model="ir.ui.view">
        <field name="name">moz.asset.category.form</field>
        <field name="model">moz.asset.category</field>
        <field name="arch" type="xml">
            <form string="Asset Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_assets" type="object" class="oe_stat_button" icon="fa-building">
                            <field name="asset_count" widget="statinfo" string="Assets"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="asset_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="method"/>
                            <field name="method_number"/>
                            <field name="method_period"/>
                            <field name="method_progress_factor" attrs="{'invisible': [('method', '!=', 'degressive')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounting" name="accounting">
                            <group>
                                <group>
                                    <field name="journal_id"/>
                                    <field name="account_asset_id"/>
                                    <field name="account_depreciation_id"/>
                                </group>
                                <group>
                                    <field name="account_depreciation_expense_id"/>
                                    <field name="account_gains_id"/>
                                    <field name="account_losses_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Analytics" name="analytics">
                            <group>
                                <field name="analytic_account_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Asset Actions -->
    <record id="action_moz_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">moz.asset</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first asset
            </p>
            <p>
                Manage fixed assets and their depreciation.
            </p>
        </field>
    </record>

    <record id="action_moz_asset_category" model="ir.actions.act_window">
        <field name="name">Asset Categories</field>
        <field name="res_model">moz.asset.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>